@model Category
@{
    ViewData["Title"] = "Add Category";
    List<Category>? categories = ViewData["categories"] as List<Category>;
}

<h1>Add Category</h1>

<form class="w-50 d-flex flex-column" asp-controller="Category" asp-action="CreateCategory" method="post">
    Name:  <input asp-for="Name" /> <br />
    @if (categories != null)
    {
        <div>Parent Category:</div>
        <select id="ParentCategoryId" name="ParentCategoryId">
            @foreach (Category category in categories)
            {
                <option value="@category.Id">@category.Name</option>
            }
        </select>
    }
    <button class="mt-4 rounded" type="submit">Add</button>
</form>